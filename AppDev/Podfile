platform :ios, '17.0'

target 'AppDev' do
  use_frameworks!  # Ensures dynamic frameworks

  # Firebase BOM (manages versions automatically)
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Firestore'
  pod 'Firebase/Storage'
  pod 'Firebase/Analytics'

  # You can remove 'Core' if using 'Analytics', as it includes it
end
